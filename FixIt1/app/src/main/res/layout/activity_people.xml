<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#135366"
    android:layout_height="match_parent"
    tools:context=".peopleActivity">

    <RelativeLayout
        android:id="@+id/mylayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/simpletext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:text="Search for people"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/searchbox"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_below="@id/simpletext"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light"
            android:hint="Search"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/colorProfile"
            android:textColorHint="@color/colorProfile"
            />
        <ImageButton
            android:id="@+id/search"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/simpletext"
            android:layout_toEndOf="@id/searchbox"
            android:layout_toRightOf="@+id/searchbox"
            android:background="#398AA0"
            android:src="@drawable/search"

            

            />
    </RelativeLayout>

    
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mylayout"
        android:layout_margin="10dp"
        android:id="@+id/results">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>