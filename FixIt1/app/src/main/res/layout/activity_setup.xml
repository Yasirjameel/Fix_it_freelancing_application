<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEFCFF"
    tools:context=".SetupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_profile_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        android:text="Note: Use your original profile image and name you can't change it after this step."
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/setup_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="235dp"
        android:background="@drawable/login_post_border"
        android:drawableLeft="@drawable/username"
        android:ems="10"
        android:hint="    Username"
        android:inputType="textMultiLine"
        android:padding="10dp" />

    <EditText
        android:id="@+id/setup_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/login_post_border"
        android:drawableLeft="@drawable/name"
        android:ems="10"
        android:hint="    Full Name"
        android:inputType="textMultiLine"
        android:padding="10dp" />

    <EditText
        android:id="@+id/setup_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="126dp"
        android:background="@drawable/login_post_border"
        android:drawableLeft="@drawable/country"
        android:ems="10"
        android:hint="    Country"
        android:inputType="textMultiLine"
        android:padding="10dp" />

    <EditText
        android:id="@+id/setup_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="69dp"
        android:background="@drawable/login_post_border"
        android:drawableLeft="@drawable/phone"
        android:ems="10"
        android:hint="    Phone Number"
        android:inputType="number"
        android:padding="10dp" />

    <Button
        android:id="@+id/setup_button"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:background="@drawable/button"
        android:textColor="#EEFCFF"
        android:padding="14dp"
        android:text="Save" />

</RelativeLayout>